<resources>
    <!-- Base application theme. -->

    <!--Theme.MaterialComponents.Light.NoActionBar-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btnStyle">
        <item name="android:layout_margin">30dp</item>
        <item name="android:background">@drawable/btn_gradient</item>
        <item name="android:textColor">#ffffff</item>

    </style>

    <style name="layoutStyle">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>

    <style name="textViewStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:textColor">#6e45e2</item>
    </style>

    <style name="profileStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:textColor">#6e45e2</item>
    </style>

    <!--Divider/Linie pentru fiecare layout-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="AppTheme.SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

</resources>