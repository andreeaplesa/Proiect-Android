<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgViewPoster"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:id="@+id/importantDetails"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgViewPoster">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="15dp"
                android:text="Title"
                />
            <TextView
                android:id="@+id/tvRuntime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="15dp"
                android:text="Runtime"
                />
            <TextView
                android:id="@+id/tvCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="15dp"
                android:text="Genres"
                />
            <View
                style="@style/Divider"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp">

                <ImageView
                    android:id="@+id/imgViewCalendar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_calendar_today_24"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:id="@+id/tvReleaseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ReleaseDate"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@+id/imgViewCalendar"
                    />

            </RelativeLayout>

            <View
                style="@style/Divider"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutMovieInfo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/importantDetails">

            <TextView
                android:id="@+id/movieInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_info"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"/>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp">

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:id="@+id/tvVoteAverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/ratingBar"
                    android:text="Vote"
                     />

                <TextView
                    android:id="@+id/tvVoteCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="27dp"
                    android:layout_toEndOf="@+id/ratingBar"
                    android:text="Vote count"
                    />

            </RelativeLayout>

            <Button
                android:id="@+id/btnVote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rate_this_movie"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                />

            <TextView
                android:id="@+id/overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overview"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnAddWatchlist"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutMovieInfo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/add_to_watchlist"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>